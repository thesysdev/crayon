{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"],
  "exclude": ["./src/lib/tailwind"],
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["./src/types.d.ts", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/components/*": ["./src/components/*"],
      "@/context/*": ["./src/context/*"]
    }
  }
}
