{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Crayon",
  "appearance": {
    "default": "dark"
  },
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Crayon",
        "pages": ["introduction", "quickstart", "how-llm-chat-works"]
      },
      {
        "tab": "Generative UI",
        "groups": [
          {
            "group": "Generative UI",
            "pages": [
              "generative-ui/index",
              "generative-ui/quick-start",
              "generative-ui/component-registry",
              "generative-ui/genui-lang",
              "generative-ui/renderer"
            ]
          }
        ]
      },
      {
        "tab": "Components",
        "groups": [
          {
            "group": "Components",
            "pages": ["components/index"]
          }
        ]
      },
      {
        "tab": "Chat",
        "pages": [
          "chat/index",
          "chat/quick-start",
          {
            "group": "Chat UI",
            "pages": ["chat/use-chat", "chat/crayon-chat", "chat/genui-in-chat"]
          },
          {
            "group": "Advanced",
            "pages": [
              "chat/advanced/customizing-ui",
              "chat/advanced/custom-chat-ui",
              "chat/advanced/message-format",
              "chat/advanced/streaming-protocol"
            ]
          },
          {
            "group": "Backend",
            "pages": [
              "chat/backend/llm-chat-endpoint",
              "chat/backend/thread-conversation-api"
            ]
          },
          {
            "group": "Integrations",
            "pages": [
              "chat/integrations/langgraph",
              "chat/integrations/vercel-ai-sdk"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Reference",
            "pages": ["api-reference/introduction"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/thesysdev/crayon",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/crayon.svg",
    "dark": "/logo/crayon.svg"
  },
  "navbar": {
    "primary": {
      "type": "github",
      "href": "https://github.com/thesysdev/crayon"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/thesysdev/crayon"
    }
  }
}
