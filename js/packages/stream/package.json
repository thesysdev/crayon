{
  "type": "module",
  "name": "@crayonai/stream",
  "version": "0.5.0",
  "description": "Streaming helpers for Crayon",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./styles/*": {
      "default": "./dist/styles/*"
    },
    "./*": {
      "types": "./dist/components/*/index.d.ts",
      "default": "./dist/components/*/index.js"
    },
    "./tailwind": {
      "types": "./dist/lib/tailwind/tailwind.d.ts",
      "default": "./dist/lib/tailwind/tailwind.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p .",
    "watch": "tsc --watch -p .",
    "lint:check": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format:fix": "prettier --write ./src",
    "format:check": "prettier --check ./src",
    "prepare": "pnpm run build",
    "ci": "pnpm run lint:check && pnpm run format:check"
  },
  "peerDependencies": {
    "best-effort-json-parser": "^1.1.2"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^3.1.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "tsx": "^4.19.2"
  },
  "keywords": [],
  "author": "engineering@thesys.dev",
  "license": "MIT"
}
